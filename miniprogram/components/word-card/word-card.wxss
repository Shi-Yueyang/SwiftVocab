.word-card {
  position: relative;
  display: flex;
  width: 80%;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  margin: 0 auto;
}

.quiz-word {
  text-align: center;
  font-size: large;
  font-weight: 400;
}

.definition {
  font-size: 36rpx;
  color: #333;
  text-align: left;
  margin-bottom: 30rpx;
}

.matching-lyric {
  position: absolute;
  left: 0;
  width: 100%;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  font-style: italic;
  line-height: 1.5;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.word-input {
  width: 90%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #f8f8f8;
}

.word-input:disabled {
  background-color: #eee;
  color: #999;
}

.button-row {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  width: 90%;
  justify-content: center;
  padding: 20rpx;
}

.submit-button {
  height: 100rpx;
  line-height: 80rpx;
  background-color: #2196F3;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.submit-button:disabled {
  background-color: #ccc;
}

.hint{
  display: flex;
  flex-direction: column;
  align-items: center;
}



