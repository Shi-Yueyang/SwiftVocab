/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px;
  padding-top: 100rpx; /* Increased top padding to move content away from the top */
  gap: 10px; 
}


.cat-image {
  width: 100%;
  height: 300px;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  background-color: #f0f0f0;
}


button {
  margin: 10rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  background: #0d7d43;
  color: #fff;
}

/* Add specific styling for the dataset selector component */
dataset-selector {
  margin-top: 20px; /* Add additional margin to the dataset selector itself */
}

